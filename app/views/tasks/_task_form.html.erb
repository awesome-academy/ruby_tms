<%= form_for([@task.subject, @task]) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :name, t(".name") %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
  <%= f.submit t(".update_task"), class: "btn btn-primary" %>
<% end %>
