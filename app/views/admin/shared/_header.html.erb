<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".app_name"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".subject"), "#" %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "admin.shared.header.course.link" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.trainer? %>
                <li><%= link_to t("shared.header.course.new"), new_admin_course_path %></li>
              <% end %>
              <li><%= link_to t("shared.header.course.visit"), admin_courses_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), "#" %></li>
              <li><%= link_to t(".setting"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out"), log_out_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), log_in_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
