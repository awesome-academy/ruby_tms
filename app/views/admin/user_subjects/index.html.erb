<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><%= t "courses.add_existing_subject.table_no" %></th>
        <th scope="col"><%= t "courses.add_existing_subject.table_name" %></th>
        <th scope="col"><%= t "courses.add_existing_subject.table_description" %></th>
        <th scope="col"><%= t "courses.add_existing_subject.table_status" %></th>
      </tr>
    </thead>
    <tbody>
      <% if @user_subjects.present? %>
        <% @user_subjects.each_with_index do |(subject,status),index| %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td>
              <%= subject.name %>
            </td>
            <td><%= subject.description %></td>
            <td><%= status %></td>
          </tr>
        <% end %>
      <% else %>
      <% end %>
    </tbody>
  </table>
</div>
